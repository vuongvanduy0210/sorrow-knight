<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Scrolling background -->
    <com.duyvv.sorrow_knight.ui.ScrollingBackgroundView
        android:id="@+id/scrollingBackground"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <!-- GameView hiển thị nhân vật và item -->
    <com.duyvv.sorrow_knight.ui.GameView
        android:id="@+id/gameView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <!-- Các nút điều khiển -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/scrollingBackground">

        <Button
            android:id="@+id/btnUp"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:text="↑" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnLeft"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:text="←" />

            <View
                android:layout_width="16dp"
                android:layout_height="0dp" />

            <Button
                android:id="@+id/btnDown"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:text="↓" />

            <View
                android:layout_width="16dp"
                android:layout_height="0dp" />

            <Button
                android:id="@+id/btnRight"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:text="→" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/attackButtonsContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnAttackWarrior"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_marginEnd="8dp"
                android:backgroundTint="#8E24AA"
                android:text="War"
                android:textColor="#FFFFFF" />

            <Button
                android:id="@+id/btnAttackArcher"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_marginEnd="8dp"
                android:backgroundTint="#D32F2F"
                android:text="Arc"
                android:textColor="#FFFFFF" />

            <Button
                android:id="@+id/btnAttackLancer"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:backgroundTint="#1976D2"
                android:text="Lan"
                android:textColor="#FFFFFF" />
        </LinearLayout>

        <Button
            android:id="@+id/btnGuard"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginTop="10dp"
            android:backgroundTint="#455A64"
            android:text="Guard (Hold)"
            android:textColor="#FFFFFF" />
    </LinearLayout>

    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/switchSoundEffect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:checked="true"
        android:thumb="@drawable/thumb"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintBottom_toTopOf="@id/switchSoundBackground"
        app:layout_constraintStart_toStartOf="parent"
        app:track="@drawable/track" />

    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/switchSoundBackground"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:checked="true"
        android:thumb="@drawable/thumb"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:track="@drawable/track" />
</androidx.constraintlayout.widget.ConstraintLayout>
