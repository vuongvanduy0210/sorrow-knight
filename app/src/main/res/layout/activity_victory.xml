<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:background="#1a1a1a">

    <!-- Congratulations Image -->
    <ImageView
        android:id="@+id/ivCongratulations"
        android:layout_width="0dp"
        android:layout_height="120dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="32dp"
        android:scaleType="centerInside"
        android:src="@drawable/congratulations"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Victory Title -->
    <TextView
        android:id="@+id/tvVictory"
        style="@style/AppTextViewStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="VICTORY!"
        android:textColor="#FFD700"
        android:textSize="42sp"
        android:shadowColor="#000000"
        android:shadowDx="3"
        android:shadowDy="3"
        android:shadowRadius="6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ivCongratulations" />

    <!-- Game Stats -->
    <LinearLayout
        android:id="@+id/layoutStats"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:orientation="vertical"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvVictory">

        <TextView
            android:id="@+id/tvGameTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Time: 02:30"
            style="@style/AppTextViewStyle"
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            android:layout_marginBottom="12dp" />

        <TextView
            android:id="@+id/tvKillCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enemies Killed: 15"
            style="@style/AppTextViewStyle"
            android:textColor="#FFFFFF"
            android:textSize="24sp" />

    </LinearLayout>

    <!-- Buttons -->
    <LinearLayout
        android:id="@+id/layoutButtons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="32dp"
        android:layout_marginHorizontal="100dp"
        android:orientation="horizontal"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/layoutStats">

        <Button
            android:id="@+id/btnPlayAgain"
            style="@style/AppButtonStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:layout_weight="1"
            android:background="@drawable/rounded_button"
            android:backgroundTint="#CC4CAF50"
            android:maxLines="1"
            android:paddingHorizontal="10dp"
            android:text="PLAY AGAIN"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnMainMenu"
            style="@style/AppButtonStyle"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_marginEnd="16dp"
            android:layout_weight="1"
            android:background="@drawable/rounded_button"
            android:backgroundTint="#CC2196F3"
            android:maxLines="1"
            android:text="MAIN MENU"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnViewLeaderboard"
            style="@style/AppButtonStyle"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:background="@drawable/rounded_button"
            android:backgroundTint="#CCFF9800"
            android:maxLines="1"
            android:text="LEADERBOARD"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:textStyle="bold" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>